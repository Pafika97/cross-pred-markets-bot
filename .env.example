# === Telegram ===
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=123456789

# === Polling interval in seconds ===
POLL_SECONDS=300

# === Kalshi public API base (unauthenticated) ===
KALSHI_API_BASE=https://api.elections.kalshi.com/trade-api/v2

# Optional: limit how many markets we fetch from Kalshi (1..1000)
KALSHI_LIMIT=1000

# === Polymarket public API base ===
POLYMARKET_API_BASE=https://gamma-api.polymarket.com

# === Myriad partner REST API (requires key; leave empty to disable) ===
MYRIAD_API_BASE=
MYRIAD_API_KEY=

# Optional: CSV path to log matches (leave empty to disable)
MATCH_LOG_PATH=matches_log.csv

# === Matching thresholds (0..100) ===
# Title similarity score using RapidFuzz token_set_ratio
TITLE_SIM_THRESHOLD=86

# If true, only notify when at least 2 platforms match (recommended)
REQUIRE_AT_LEAST=2
